@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var home = Model.AncestorsOrSelf().Last();
    var carousel = home?.Value<IEnumerable<BlockListItem>>("mainCarousel")?.FirstOrDefault()?.Content.Value<MediaWithCrops>("sliderImage")?.Url();

    var rooms = home?.ChildrenOfType("roomsRepo")?.FirstOrDefault();
    var contact = home?.ChildrenOfType("contactPage")?.FirstOrDefault();
    var phone = contact?.Value("phone");
}

@if (!home.Value<bool>("bookSwitch"))
{
   
}else
{
    <section class="testimonials">
        <div class="background bg-img bg-fixed section-padding pb-0" data-background="@carousel" data-overlay-dark="7">
            <div class="container">
                <div class="row">
                    <!-- Reservation -->
                    <div class="col-md-5 mb-30 mt-30">
                        <p><i class="star-rating"></i><i class="star-rating"></i><i class="star-rating"></i><i class="star-rating"></i><i class="star-rating"></i></p>
                        <h5>@Umbraco.GetDictionaryValue("reservationForm.Text")</h5>
                        @if (phone != "")
                        {
                            <div class="reservations mb-30">
                                <div class="icon color-1"><span class="flaticon-call"></span></div>
                                <div class="text">
                                    <p class="color-1">@Umbraco.GetDictionaryValue("reservationForm.reservationTitle")</p> <a class="color-1" href="tel:@phone">@phone</a>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- Booking From -->
                    <div class="col-md-5 offset-md-2">
                        <div class="booking-box">
                            <div class="head-box">
                                <h6>@rooms?.Name</h6>
                                <h4>@Umbraco.GetDictionaryValue("reservationForm.formTitle")</h4>
                            </div>
                            <div class="booking-inner clearfix">
                                <form action="rooms2.html" class="form1 clearfix">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="input1_wrapper">
                                                <label>Check in</label>
                                                <div class="input1_inner">
                                                    <input type="text" class="form-control input datepicker" placeholder="Check in">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="input1_wrapper">
                                                <label>Check out</label>
                                                <div class="input1_inner">
                                                    <input type="text" class="form-control input datepicker" placeholder="Check out">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="select1_wrapper">
                                                <label>@Umbraco.GetDictionaryValue("reservationForm.Adult")</label>
                                                <div class="select1_inner">
                                                    <select class="select2 select" style="width: 100%">
                                                        <option value="0">@Umbraco.GetDictionaryValue("reservationForm.Adult")</option>
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                        <option value="3">3</option>
                                                        <option value="4">4</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="select1_wrapper">
                                                <label>@Umbraco.GetDictionaryValue("reservationForm.Children")</label>
                                                <div class="select1_inner">
                                                    <select class="select2 select" style="width: 100%">
                                                        <option value="0">@Umbraco.GetDictionaryValue("reservationForm.Children")</option>
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                        <option value="3">3</option>
                                                        <option value="4">4</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn-form1-submit mt-15">@Umbraco.GetDictionaryValue("reservationForm.SubmitButton")</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
